#!/bin/bash

input="$*"

if [ "${input:0:2}" = "\\\\" ]; then
  win="${input}"
  # Convert from '\\example.com\a\b\c' to 'smb://example.com/a/b/c'
  mac="${win//\\/\/}"
  mac="${mac/\/\//smb:\/\/}"
elif [ "${input:0:6}" = "smb://" ]; then
  mac="${input}"
  # Convert from 'smb://example.com/a/b/c' to '\\example.com\a\b\c'
  win="${mac#smb://}"
  win="\\\\${win//\//\\}"
else
  if [ "${input:0:1}" == "\\" ]; then
    printf "パスを \'\' で囲んでないんじゃない？\n"
  else
    echo "対応しているパス形式じゃないよ"
  fi
  exit 1
fi

echo "${win}"
echo "${mac}"
